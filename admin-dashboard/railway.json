{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd admin-dashboard && npm install && npm run start"
  },
  "deploy": {
    "startCommand": "/bin/sh -c 'cd admin-dashboard && node server.js'",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "port": 5000
  }
}
