{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd admin-dashboard && npm install"
  },
  "deploy": {
    "startCommand": "node admin-dashboard/server.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "port": 5000
  }
}
