{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd admin-dashboard && npm install --include=dev",
    "watchPatterns": [
      "admin-dashboard/public/**",
      "admin-dashboard/server.js",
      "admin-dashboard/package.json"
    ]
  },
  "deploy": {
    "startCommand": "node admin-dashboard/server.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "port": 5000
  }
}
